<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="edu.eci.pdsw.sampleprj.dao.mybatis.mappers.IdeaMapper">

	<resultMap type='Idea' id='IdeaResult'>
		<id property='id' column='id' />
		<result property='nombreIniciativa' column='nombre_iniciativa' />
		<result property='estado' column='estado' />
		<result property='votos' column='votos' />
		<result property='fechaCreacion' column='fecha_creacion' />
		<result property='usuarioCarne' column='usuario_carne' />
		<result property='descripcion' column='descripcion' />

		<association property="tIdeaId" javaType="TipoIdea"
			resultMap='edu.eci.pdsw.sampleprj.dao.mybatis.mappers.TipoIdeaMapper.TipoIdeaResult'></association>
	</resultMap>


	<update id="actualizarEstado">
		UPDATE
		idea
		SET
		estado = #{nEstado}
		WHERE
		id = #{id}
	</update>

	<select id="consultarIdeas" resultMap="IdeaResult">
		select * from idea as i left join t_idea as ti ON(ti.id=t_idea_id);
	</select>

	<insert id="insertarIdea">
		insert into idea
		(id,nombre_iniciativa,t_idea_id,usuario_carne,votos,fecha_creacion,estado,descripcion)
		values
		(#{Idea.id},#{Idea.nombreIniciativa},#{Idea.tIdeaId.id},#{Idea.usuarioCarne},#{Idea.votos},#{Idea.fechaCreacion},#{Idea.estado},#{Idea.descripcion});
	</insert>
	
	<select id="consultarIdeasUsuario" resultMap="IdeaResult">
		select * from idea as i left join t_idea as ti ON(ti.id=t_idea_id) where usuario_carne = #{ucarne};
	</select>

	<select id="consultarIdea" resultMap="IdeaResult">
		select * from idea as i left join t_idea as ti ON(ti.id=t_idea_id)
		 where id= #{id};
	</select>

	<select id="consultarPalabrasClave" resultMap="IdeaResult">
		select * from idea
		where descripcion like '%' || #{clave} || '%';
	</select>



</mapper>
